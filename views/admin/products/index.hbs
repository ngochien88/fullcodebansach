<form action="/admin/products/result" method="get">
    <div class="row">
        <div class="col-xs-12 col-xs-offset-9 input-group add-on text-right" style="width: 290px; padding: 5px;">
            <input type="text" name="key" class="form-control" placeholder="Search..." />
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<div class="panel" id="spy5">
    <div class="panel-heading">
        <span class="panel-title">products list</span>
    </div>
    <div class="col-md-12 text-right" style="padding-right: 1px; margin-bottom: 5px;">
        <a id="add-new-user" href="/admin/products/add" title="add new product" class="btn btn-primary">new product
            <i class="fa fa-plus"></i>
        </a>
    </div>
    <div class="panel-body pn">
        <div class="table-responsive">

            <div class="bs-component">
                <table class="table table-bordered mbn">
                    <colgroup>
                        <col />
                        <col width="80px" />
                        <col width="110px" />
                        <col width="110px" />
                        <col width="120px" />
                        <col width="70px" />
                        <col width="100px" />
                        <col width="150px" />
                        <col width="60px" />
                        <col width="60px" />
                    </colgroup>
                    <thead>
                        <tr class="bg-primary">
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Date</th>
                            <th>Sale</th>
                            <th>Price</th>
                            <th>Creator</th>
                            <th>
                                <i class="fa fa-pencil"></i>
                            </th>
                            <th>
                                <i class="fa fa-trash"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{Name}}</td>
                            <td>{{Amount}}</td>
                            <td>{{Category}}</td>
                            <td>{{Brand}}</td>
                            <td>{{Date}}</td>
                            <td>{{Sale}}</td>
                            <td>{{number_format Price}}Ä‘</td>
                            <td>{{Creator}}</td>
                            <td>
                                <a href="/admin/products/edit?id={{id}}" title="edit" class="btn btn-xs btn-info">
                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/admin/products/delete?id={{id}}" title="delete" class="btn btn-xs btn-danger">
                                    <i class="ace-icon fa fa-trash bigger-120"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{#if pagination}}
<div class="text-center">
    <ul class="pagination text-center">
        {{#with firstPage}}
        {{#if isFirstPage}}
        <li class="page-item disabled">
            <a class="page-link" href="javascript:;">Previous</a>
        </li>
        {{else}}
        <li class="page-item ">
            <a class="page-link" href="?page={{value}}">Previous</a>
        </li>
        {{/if}}
        {{/with}}


        {{#each page_numbers}}
        {{#if isCurPage}}
        <li class="page-item active">
            <a class="page-link" href="javascript:;">{{value}}</a>
        </li>
        {{else}}
        <li class="page-item ">
            <a class="page-link" href="?page={{value}}">{{value}}</a>
        </li>
        {{/if}} 
        {{/each}}


        {{#with lastPage}}
        {{#if isLastPage}}
        <li class="page-item disabled">
            <a class="page-link" href="#">Next</a>
        </li>
        {{else}}
        <li class="page-item">
            <a class="page-link" href="?page={{value}}">Next</a>
        </li>
        {{/if}}
        {{/with}}
    </ul>
</div>
{{/if}}