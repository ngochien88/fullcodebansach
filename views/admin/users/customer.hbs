
<form action="/admin/customers/result" method="get">
    <div class="row">
        <div class="col-xs-12 col-xs-offset-9 input-group add-on text-right" style="width: 290px; padding: 5px;">
            <input type="text" name="key" class="form-control" placeholder="Search..." />
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>
<div class="panel" id="spy5">
    <div class="panel-heading">
        <span class="panel-title">customers</span>
    </div>
    <div class="panel-body pn">
        <div class="table-responsive">

            <div class="bs-component">
                <table class="table table-bordered mbn">
                    <colgroup>
                        <col width="100px" />
                        <col width="160px" />
                        <col width="80px" />
                        <col width="80px" />
                        <col />
                        <col width="120px" />
                        <col width="200px" />
                        <col width="60px" />
                    </colgroup>
                    <thead>
                        <tr class="bg-primary">
                            <th>Username</th>
                            <th>Fullname</th>
                            <th>DateOfBirth</th>
                            <th>Sex</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>
                                <i class="fa fa-undo"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{Username}}</td>
                            <td>{{Fullname}}</td>
                            <td>{{DOB}}</td>
                            <td>{{Sex}}</td>
                            <td>{{Address}}</td>
                            <td>{{Phone}}</td>
                            <td>{{Email}}</td>
                            <td>
                                <a href="/admin/users/resetpassword?id={{id}}" title="reset password" class="btn btn-xs btn-danger">
                                    <i class="fa fa-undo"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{{#if pagination}}
<div class="text-center">
    <ul class="pagination text-center">
        {{#with firstPage}}
        {{#if isFirstPage}}
        <li class="page-item disabled">
            <a class="page-link" href="javascript:;">Previous</a>
        </li>
        {{else}}
        <li class="page-item ">
            <a class="page-link" href="?page={{value}}">Previous</a>
        </li>
        {{/if}}
        {{/with}}


        {{#each page_numbers}}
        {{#if isCurPage}}
        <li class="page-item active">
            <a class="page-link" href="javascript:;">{{value}}</a>
        </li>
        {{else}}
        <li class="page-item ">
            <a class="page-link" href="?page={{value}}">{{value}}</a>
        </li>
        {{/if}} 
        {{/each}}


        {{#with lastPage}}
        {{#if isLastPage}}
        <li class="page-item disabled">
            <a class="page-link" href="#">Next</a>
        </li>
        {{else}}
        <li class="page-item">
            <a class="page-link" href="?page={{value}}">Next</a>
        </li>
        {{/if}}
        {{/with}}
    </ul>
</div>
{{/if}}