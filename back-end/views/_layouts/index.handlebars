				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</footer>
	<!-- /FOOTER -->

	<!-- jQuery Plugins -->

	<script src="/assets/bookstore/js/jquery.min.js"></script>
	<script src="/assets/bookstore/js/bootstrap.min.js"></script>

	<script src="/assets/bookstore/js/slick.min.js"></script>
