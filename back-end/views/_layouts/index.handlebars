			</div>
			<!-- /row -->
			<hr>
			<!-- row -->
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center">
					<!-- footer copyright -->
					<div class="footer-copyright">
						THE BEST ONLINE BOOK STORE FOR YOU - BOOKSTORE WITH LOVE
					</div>
