<script type="text/javascript">
    $('#notify').fadeIn('slow');
    setTimeout(() => {
        $('#notify').fadeOut(2500);
        setTimeout(() => {
            $('#notify').remove();
        }, 1500);
    }, 3000);
</script> {{/section}} {{#with product}}
