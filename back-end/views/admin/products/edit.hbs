{{#with product}}
<div class="col-lg-12">
    <div class="form-horizontal">
        <section class="panel">
            <div class="panel-heading">
                <span class="panel-title">edit {{Name}}'s info </span>
            </div>
            <form action="" method="post"  enctype="multipart/form-data">
                <div id="user-detail-form" class="panel-body" style="padding-right:0px;">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Choose Image </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input name="img" type="file" id="img" value="{{Picture}}" />
                            <input type="hidden" name="picture" value="{{Picture}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="id" value="{{id}}">
                        <label class="col-sm-3 control-label">Name </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="name" type="text" class="form-control" value="{{Name}}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Amount </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="amount" type="text" class="form-control" value="{{Amount}}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Category</label>
                        <div class="col-sm-9" style="width: 700px;">
                            <select class="form-control" name="category">
                                <option value="{{CateId}}">{{CatName}}</option>
                                {{/with}} 
                                {{#each categories}}
                                <option value="{{id}}">{{Name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Brand</label>
                        <div class="col-sm-9" style="width: 700px;">
                            <select class="form-control" name="brand">
                                {{#with product}}
                                <option value="{{BraId}}">{{BraName}}</option>
                                {{/with}} 
                                {{#each brands}}
                                <option value="{{id}}">{{Name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    {{#with product}}
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Price </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="price" type="text" class="form-control" value="{{Price}}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Sale </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="sale" type="text" class="form-control" value="{{Sale}}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Author</label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="author" type="text" class="form-control" value="{{Author}}" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Origin </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="origin" type="text" class="form-control" value="{{Origin}}" />
                        </div>
                    </div>
                    {{/with}}
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Creator </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" type="text" class="form-control" value="{{layoutVM.curUser.Fullname}}" readonly/>
                            <input type="hidden" name="creator" value="{{layoutVM.curUser.id}}">
                        </div>
                    </div>
                    {{#with product}}
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Description</label>
                        <div class="col-sm-9" style="width: 700px;">
                            <textarea name="description" rows="5" class="form-control">{{Description}}</textarea>
                        </div>
                    </div>
                    {{/with}}
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" id="save" class="btn btn-primary">
                                <i style="cursor:pointer" class="fa fa-save"></i>
                                SAVE
                            </button>
                            <a href="/admin/products" id="back-add-user" type="button" class="btn btn-default">
                                <i class="fa fa-arrow-circle-left"></i>
                                BACK
                            </a>
                        </div>
                    </div>
                </footer>
            </form>
        </section>
    </div>
</div>