<form action="/admin/users/result" method="get">
    <div class="row">
        <div class="col-xs-12 col-xs-offset-9 input-group add-on text-right" style="width: 290px; padding: 5px;">
            <input type="text" name="key" class="form-control" placeholder="Search..." />
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<div class="panel" id="spy5">
    <div class="panel-heading">
        <span class="panel-title">admin</span>
    </div>
    <div class="col-md-12 text-right" style="padding-right: 1px; margin-bottom: 5px;">
        <a id="add-new-user" href="/admin/users/add" title="add new user" class="btn btn-primary">new admin
            <i class="fa fa-plus"></i>
        </a>
    </div>
    <div class="panel-body pn">
        <div class="table-responsive">

            <div class="bs-component">
                <table class="table table-bordered mbn">
                    <colgroup>
                        <col width="100px" />
                        <col width="160px" />
                        <col width="80px" />
                        <col width="80px" />
                        <col />
                        <col width="120px" />
                        <col width="200px" />
                        <col width="60px" />
                        <col width="60px" />
                        <col width="100px" />
                    </colgroup>
                    <thead>
                        <tr class="bg-primary">
                            <th>Username</th>
                            <th>Fullname</th>
                            <th>DateOfBirth</th>
                            <th>Sex</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>
                                <i class="fa fa-pencil"></i>
                            </th>
                            <th>
                                <i class="fa fa-undo"></i>
                            </th>
                            <th>
                                <i class="fa fa-flag"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{Username}}</td>
                            <td>{{Fullname}}</td>
                            <td>{{DOB}}</td>
                            <td>{{Sex}}</td>
                            <td>{{Address}}</td>
                            <td>{{Phone}}</td>
                            <td>{{Email}}</td>
                            <td>
                                <a href="/admin/users/edit?id={{id}}" title="edit" class="btn btn-xs btn-info">
                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/admin/users/resetpassword?id={{id}}" title="reset password" class="btn btn-xs btn-danger">
                                    <i class="fa fa-undo"></i>
                                </a>
                            </td>
                            {{#if check}}
                            <td>
                                <button title="actived" class="btn btn-xs btn-success" disabled>
                                    actived
                                </button>
                            </td>
                            {{else}}
                            <td>
                                <button title="blocked" class="btn btn-xs btn-danger" disabled>
                                    blocked
                                </button>
                            </td>
                            {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{{#if pagination}}
<div class="text-center">
    <ul class="pagination text-center">
        {{#with firstPage}} {{#if isFirstPage}}
        <li class="page-item disabled">
            <a class="page-link" href="javascript:;">Previous</a>
        </li>
        {{else}}
        <li class="page-item ">
            <a class="page-link" href="?page={{value}}">Previous</a>
        </li>
        {{/if}} {{/with}} 
        {{#each page_numbers}} 
        {{#if isCurPage}}
        <li class="page-item active">
            <a class="page-link" href="javascript:;">{{value}}</a>
        </li>
        {{else}}
        <li class="page-item ">
            <a class="page-link" href="?page={{value}}">{{value}}</a>
        </li>
        {{/if}} 
        {{/each}} 
        {{#with lastPage}} 
        {{#if isLastPage}}
        <li class="page-item disabled">
            <a class="page-link" href="#">Next</a>
        </li>
        {{else}}
        <li class="page-item">
            <a class="page-link" href="?page={{value}}">Next</a>
        </li>
        {{/if}} {{/with}}
    </ul>
</div>
{{/if}}