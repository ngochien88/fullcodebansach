 {{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assets/admin/bootstrap-datepicker/css/bootstrap-datepicker.min.css"> {{/section}} {{#section 'js'}}
<script src="/assets/admin/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
    $('#txtDOB').datepicker({
        format: 'd/m/yyyy',
        autoclose: true
    });

    $('#notify').fadeIn('slow');
    setTimeout(() => {
        $('#notify').fadeOut(2500);
        setTimeout(() => {
            $('#notify').remove();
        }, 2500);
    }, 2000);
</script> {{/section}} {{#if error}}
<div class="alert alert-danger" id="notify" style="
                position: fixed;
                top: 100px;
                right: 20px;
                z-index: 99999;
                display: none;
                ">
    <strong>!!!</strong>
    this username isn't available. please try another.
</div>
{{/if}}

<div class="col-lg-12">
    <div class="form-horizontal">
        <section class="panel">
            <div class="panel-heading">
                <span class="panel-title">add new user</span>
            </div>

            <form action="" method="post">
                <div id="user-detail-form" class="panel-body" style="padding-right:0px;">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Username </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="username" type="text" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Fullname </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="fullname" type="text" class="form-control" value="" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">CMND </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="cmnd" type="text" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">DateOfBirth</label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="txtDOB" name="dob" type="text" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Sex</label>
                        <div class="col-sm-9" style="width: 700px;">
                            <select class="form-control" name="sex" aria-valuetext="">
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Address</label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="address" type="text" class="form-control" value="" />

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Phone </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="phone" type="text" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email </label>
                        <div class="col-sm-9" style="width: 700px;">
                            <input id="" name="email" type="text" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3" style="width: 700px;">
                            <input name="checkbox" id="" type="checkbox" value="" checked="checked" /> Already is Actived
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" id="save-add-user" class="btn btn-primary">
                                <i style="cursor:pointer" class="fa fa-save"></i>
                                SAVE
                            </button>
                            <a href="/admin/users" id="back-add-user" type="button" class="btn btn-default">
                                <i class="fa fa-arrow-circle-left"></i>
                                BACK
                            </a>
                        </div>
                    </div>
                </footer>
            </form>
        </section>
    </div>
</div>


