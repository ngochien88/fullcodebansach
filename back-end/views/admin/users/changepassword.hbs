{{#section 'js'}}
<script type="text/javascript">
    $('#compare').hide();
    $('#temp').show();
    $('#notify').hide();
    $('#confPassword').keyup(function () {
        var newPassword = $('#newPassword').val();
        var confPassword = $('#confPassword').val();
        if (newPassword === confPassword && newPassword !== '' && confPassword !== '') {
            $('#compare').show();
            $('#temp').hide();
        }
        else {
            $('#compare').hide();
            $('#temp').show();
        }
    });
    $('#newPassword').keyup(function () {
        var newPassword = $('#newPassword').val();
        var confPassword = $('#confPassword').val();
        if (newPassword === confPassword && newPassword !== '' && confPassword !== '') {
            $('#compare').show();
            $('#temp').hide();
        }
        else {
            $('#compare').hide();
            $('#temp').show();
        }
    });
    setTimeout(function(){
        $('#error').hide(1000);
        $('#success').hide(1000);
    }, 2500);
</script> {{/section}}



<div class="col-lg-12">
    <div class="form-horizontal">
        <section class="panel">
            <div class="panel-heading col-sm-8">
                <span class="panel-title">change password</span>
            </div>

            <form action="" method="post" id="frm">
                <div id="user-detail-form" class="panel-body" style="padding-top:20px; padding: 5px !important;">
                   {{#if error}}
                    <div id="error" class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-9 alert alert-danger" style="width: 400px;">
                            <strong>ERROR!</strong> An error occurred. Please try again!
                        </div>
                    </div>
                    {{/if}}
                    {{#if success}}
                    <div id="success" class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-9 alert alert-success" style="width: 400px;">
                            <strong>SUCCESS!</strong> Change password successfully.
                        </div>
                    </div>
                    {{/if}}
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Current Password </label>
                        <div class="col-sm-9" style="width: 400px;">
                            <input id="" name="curPassword" type="password" class="form-control" value="" />
                            <input type="hidden" name="id" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">New Password </label>
                        <div class="col-sm-9" style="width: 400px;">
                            <input id="newPassword" name="newPassword" type="password" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom: 0px !important;">
                        <label class="col-sm-3 control-label">Comfirm Password </label>
                        <div class="col-sm-9" style="width: 400px;">
                            <input id="confPassword" name="confPassword" type="password" class="form-control" value="" />
                        </div>
                    </div>
                    <span id="compare" class="col-sm-9 col-sm-offset-3" style="color: green;" for="">khớp mật khẩu</span>
                    <span id="temp" for="">&nbsp;</span>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button id="btn" type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i>
                                SAVE
                            </button>
                            <a id="btnback" href="{{layoutVM.preUrl}}" type="button" class="btn btn-default">
                                <i class="fa fa-arrow-circle-left"></i>
                                BACK
                            </a>
                        </div>
                    </div>
                </footer>
            </form>
        </section>
    </div>
</div>